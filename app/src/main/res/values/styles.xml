<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="label_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/arbutus</item>
    </style>

    <style name="text_style" parent="label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:fontFamily">@font/arbutus_slab</item>
        <item name="android:textColor">@color/alabaster</item>
    </style>

    <style name="list_style" parent="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@color/alabaster</item>
    </style>
</resources>